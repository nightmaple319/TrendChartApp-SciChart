<Window x:Class="TrendChartApp.Views.ColorSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrendChartApp.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        materialDesign:ThemeAssist.Theme="Dark"
        mc:Ignorable="d"
        Title="趨勢線顏色設定" Height="600" Width="800" WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0" Text="趨勢線顏色設定" 
                   FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <!-- 標籤和顏色設定列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="tagColorItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource PanelBrush}" 
                                BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="1" 
                                Margin="0,5" 
                                Padding="15"
                                CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <!-- 標籤編號 -->
                                <TextBlock Grid.Column="0" 
                                          Text="{Binding TagNo}" 
                                          VerticalAlignment="Center" 
                                          FontWeight="Bold"/>

                                <!-- 標籤名稱 -->
                                <TextBlock Grid.Column="1" 
                                          Text="{Binding TagName}" 
                                          VerticalAlignment="Center" 
                                          Margin="10,0"/>

                                <!-- 當前顏色預覽 -->
                                <Rectangle Grid.Column="2" 
                                          Width="60" Height="20" 
                                          Fill="{Binding ColorBrush}" 
                                          Stroke="{StaticResource BorderBrush}" 
                                          StrokeThickness="1" 
                                          VerticalAlignment="Center"/>

                                <!-- 顏色選擇器 -->
                                <ComboBox Grid.Column="3" 
                                         x:Name="colorComboBox"
                                         ItemsSource="{Binding AvailableColors}"
                                         SelectedItem="{Binding SelectedColor, Mode=TwoWay}"
                                         VerticalAlignment="Center"
                                         Margin="10,0"
                                         Style="{StaticResource MaterialDesignComboBox}"
                                         Background="{StaticResource ControlBrush}"
                                         Foreground="{StaticResource ControlForegroundBrush}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Rectangle Width="20" Height="15" 
                                                          Fill="{Binding Brush}" 
                                                          Stroke="Gray" 
                                                          StrokeThickness="1" 
                                                          Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Name}" 
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <!-- 自訂顏色按鈕 -->
                                <Button Grid.Column="4" 
                                       Content="自訂..." 
                                       Click="CustomColorButton_Click"
                                       Tag="{Binding}"
                                       Style="{StaticResource MaterialDesignOutlinedButton}"
                                       Background="{StaticResource ControlBrush}"
                                       Foreground="{StaticResource ControlForegroundBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 預設顏色重置區域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,10">
            <Button Content="重置為預設顏色" 
                    Click="ResetDefaultColors_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Background="{StaticResource ControlBrush}"
                    Foreground="{StaticResource ControlForegroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    Margin="0,0,10,0"/>

            <Button Content="隨機顏色" 
                    Click="RandomColors_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Background="{StaticResource ControlBrush}"
                    Foreground="{StaticResource ControlForegroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"/>
        </StackPanel>

        <!-- 按鈕區域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="套用" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Width="80" Height="30" 
                    Margin="0,0,10,0" 
                    Click="ApplyButton_Click"
                    Background="{StaticResource AccentBrush}"/>
            <Button Content="確定" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Width="80" Height="30" 
                    Margin="0,0,10,0" 
                    Click="OkButton_Click"
                    Background="{StaticResource AccentBrush}"/>
            <Button Content="取消" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Width="80" Height="30" 
                    Click="CancelButton_Click"
                    Background="{StaticResource ControlBrush}"/>
        </StackPanel>
    </Grid>
</Window>